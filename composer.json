{
	"name": "curlybytes/marigold",
	"description" : "The Branch Application with branch expansion, branch information and internet module",
	"scripts": {
		"check-test": [
			"phpunit -d auto_prepend_file=xdebug_filter.php --bootstrap ./src/tests/Bootstrap.php -vvv --testdox --colors=always"
		],
		"check-xdebug": [
			"phpunit --coverage-clover /tmp/coverage.xml"
		],
		"check-phpdbg": [

			"phpdbg -q vendor/bin/phpunit  -vvv --testdox --colors=always"
		],
		"check-pcov": [

			"pecl install pcov",
			"php -d pcov.enabled=1 vendor/bin/phpunit â€”coverage-html=var/coverage-report"
		],
		"check-watch": [

			"phpunit-watcher watch"
		]
	  },
	  "scripts-descriptions": {
		"install-production": "Install the standard setup with code efficiently."
	  },
	"require": {
		"codeigniter/framework": "3.1.11"
	},
	"repositories": [{
		"type": "composer",
		"url": "https://packagist.org"
	  }],
	"config": {
		"secure-http": true
	},
	"require-dev": {
		"nerones/codeigniter-phpcs": "dev-master",
		"vlucas/phpdotenv": "^4.1",
		"filp/whoops": "^2.7.1",
		"spatie/phpunit-watcher": "^1.22",
		"mikey179/vfsstream": "1.1.*",
		"kenjis/ci-phpunit-test": "^3.0.0"
	}
}
